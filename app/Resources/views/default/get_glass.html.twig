{% extends 'base.html.twig' %}
{% block body %}

    <div class="row my-auto">
        {% for glass in glasses %}
            <div class="col-md-6 color-back container d-flex justify-content-end">
                <div class="col-md-10 item-glass d-flex justify-content-end my-map my-auto">
                    <a><img src="/img/{{glass.image}}" class="img-responsive" alt=""></a>
                </div>
            </div>

            <div class=" col-md-6 color-back container d-flex justify-content-left">
                <div class="my-auto">
                    <p class="title">{{ glass.name }}</p>
                    <p class="price orange-text">{{ glass.price }}€</p>
                    <p>Opina | Review</p>
                    <div class="row my-auto">
                        <p class="black-text col-md-3 correction">Marca:</p><p class="col-md-5 correction">{{ glass.name }}</p>
                    </div>
                    <div class="row my-auto">
                        <p class="black-text col-md-3 correction">Envio:</p><p class="col-md-3 correction">Desde 10€</p><p class="col-md-5 orange-text correction">GRATIS con GEEK PREMIUM</p>
                    </div>
                    <div class="row my-auto">
                        <p class="black-text col-md-3 correction">Cantidad:</p> <p class="col-md-4 black-tex correction">1</p>
                    </div>
                    <div class="row my-auto">
                        <p class="black-text col-md-3 correction">Disponibilidad: </p> <p class="col-md-5 black-text correction">¡En stock!</p>
                    </div>
                    <div class="row my-auto">
                        <p class="black-text col-md-3 correction">Financiación</p> <p class="col-md-5 black-text correction">6, 12, 20 y 30 meses</p>
                    </div>
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-2 small-border heart mr-1">
                                <input class="shop-icons mt-3" type="image" src="{{ asset('img/heart.png') }}"/>
                            </div>
                            <div class="col-md-6 small-border cart text-center united">
                                <a href="{{ path('add-shopping-cart', {'id': glass.id }) }}"><input class="shop-icons" type="image" src="{{ asset('img/shopping-cart.png') }}"/><p class=" grey-text mt-3 ml-2">Añadir al carrito</p></a>
                            </div>
                            <div class="col-md-4">
                                <a class="nav-link btn-buy white-text" href="{{ path('add-shopping-cart', {'id': glass.id }) }}">Comprar<span class="sr-only">(current)</span></a>
                            </div>
                        </div>
                    </div>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
                        <label class="custom-control-label grey-text" for="defaultUnchecked">Garantía por rotura y daño accidental</label>
                    </div>
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-1 mr-1">
                                <a><img class="social-logo" src="{{ asset('img/twitter-logo.png') }}" alt="twitter"></a>
                            </div>
                            <div class="col-md-1 mr-1">
                                <a><img class="social-logo" src="{{ asset('img/facebook-logo.png') }}" alt="twitter"></a>
                            </div>
                            <div class="col-md-1 mr-1">
                                <a><img class="social-logo" src="{{ asset('img/google-logo.png') }}" alt="twitter"></a>
                            </div>
                            <div class="col-md-1 mr-1">
                                <a><img class="social-logo" src="{{ asset('img/mail-logo.png') }}" alt="twitter"></a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-1">
                                <a><img class="img-responsive bottom-image" src="{{ asset('img/bottom-glasses.png') }}" alt="twitter"></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
